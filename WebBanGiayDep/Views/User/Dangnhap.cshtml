
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutTaiKhoan.cshtml";
}
<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<table align="center" style="margin-left: 40%; margin-bottom:10%; margin-top:2%">
    <h1 style="text-align:center; margin-top: 100px; font-size: 25px; font-weight: bold ">ĐĂNG NHẬP</h1>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td align="right">Mật khẩu: </td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" style="margin-left:5%" />
                <p style="font-size: 15px">Bạn Chưa có tài khoản?<a href="@Url.Action("Dangky","User")" style="font-size:15px; font-weight:bold">  Đăng ký </a></p>
            </td>
        </tr>
    }
</table>



@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutTaiKhoan.cshtml";
}

<table align="center" style="margin-left: 40%; margin-bottom:10%; margin-top:2%">
    <h1 style="text-align:center; margin-top: 100px; font-size: 25px; font-weight: bold ">ĐĂNG KÝ THÀNH VIÊN</h1>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi3"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Nhập lại mật khẩu:</td>
            <td>
                @Html.Password("MatKhauNhapLai")
                @ViewData["Loi4"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Email:</td>
            <td>
                <input type="email" name="email" />
                @ViewData["Loi5"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>
                @Html.TextBox("DiaChi")
                @ViewData["Loi6"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("DienThoai")
                @ViewData["Loi7"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="NgaySinh" />
                @ViewData["Loi8"]
            </td>
        </tr>

        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>


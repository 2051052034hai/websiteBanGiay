@model WebBanGiayDep.Models.THUONGHIEU

@{
    ViewBag.Title = "SuaThuonghieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrap" style="padding-top:2%; padding-left:10%; padding-right:10%; padding-bottom:5%">
    <h2 style="text-align:center">SỬA THÔNG TIN THƯƠNG HIỆU</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="font-weight: bold; font-size: 16px" >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaThuongHieu)

            <div class="form-group">
                @Html.LabelFor(model => model.TenThuongHieu, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenThuongHieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenThuongHieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập nhật" class="btn btn-default" style="background-color: #4CAF50; color: white; font-size: 16px" />
                </div>
            </div>
        </div>
    }
<br />
    <div>
        @Html.ActionLink("Trở về trang thương hiệu", "ThuongHieu")
    </div>
</div>
